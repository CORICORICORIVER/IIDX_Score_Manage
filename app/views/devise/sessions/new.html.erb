<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%#= f.label :ニックネーム %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "ニックネームを入力"%>
  </div>

  <div class="mb-3">
    <%#= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control", placeholder: "パスワードを入力"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報を保存する %>
    </div>
  <% end %>

  <button type="button" class="btn btn-primary">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </button>
<% end %>

<%= render "devise/shared/links" %>
