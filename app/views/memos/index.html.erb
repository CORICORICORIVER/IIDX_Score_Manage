<div class="wrapper">
    <div class="container flex-start">
        <div class="col-box-1">
            <h2>メモ一覧</h2>
        </div>

        <!--全削除ボタン-->
        <div class="col-box-1">
            <%= form_with url: destroy_all_memos_path, local: true, method: :delete do |f| %>
                <button type="button" class="btn btn-danger">
                    <%= f.submit "全削除", class: "btn" %>
                </button>
            <% end %>    
        </div>

        <% @memos.reverse.each do |scratch| %>
            <div class="col-box-3">
                <%= form_with model: scratch, url: memo_path(scratch.id), local: true, method: :patch do |f| %>
                    </div>
                    <div class="memo-header">
                        <%= f.text_field :タイトル, placeholder: "タイトル", class: "form-box" %>
                    </div>
                <% end %>

            </div>
        <% end %>

        <% @memos.reverse.each do |soflan| %>
            <div class="col-box-3">
                <%= form_with model: soflan, url: memo_path(soflan.id), local: true, method: :patch do |f| %>
                    <div class="memo-header">
                        <%= f.text_field :タイトル, placeholder: "タイトル", class: "form-box" %>
                    </div>
                <% end %>

            </div>
        <% end %>
    </div>
</div>