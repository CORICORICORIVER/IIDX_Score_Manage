<% if user_signed_in? %>

<div class="wrapper">
  <div class="container flex-start">
    
    <div class="col-box-1">
      <button type="button" class="btn btn-primary">
        <%= link_to 'CSVアップロードページへ', userpage_path(@resource), class: "btn" %>
      </button>   
    </div>

    <div class="col-box-1">
			<h4>↓ジャンルごとにソート↓</h4>
      <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <a href="<%= notes_path %>" class="btn btn-outline-primary">NOTES</a>
        <a href="<%= memos_path(sort: 'chord') %>" class="btn btn-outline-primary">CHORD</a>
        <a href="<%= memos_path(sort: 'peak') %>" class="btn btn-outline-primary">PEAK</a>
        <a href="<%= memos_path(sort: 'charge') %>" class="btn btn-outline-primary">CHARGE</a>
        <a href="<%= memos_path(sort: 'scratch') %>" class="btn btn-outline-primary">SCRATCH</a>
        <a href="<%= memos_path(sort: 'soflan') %>" class="btn btn-outline-primary">SOF-LAN</a>
      </div>
    </div>
  
  </div>
</div>

<% else %>
	<div class="alert alert-danger" role="alert">
  <h2>サインインをしてください</h2>
  </div>
  <div class="container flex-start">
    <div class="col-box-1">
    <button type="button" class="btn btn-outline-primary">
      <%= link_to '新規登録', new_user_registration_path, method: :get , class: "btn"%>
    </button>
    <button type="button" class="btn btn-outline-primary">
      <%= link_to 'ログイン', new_user_session_path, method: :get , class: "btn"%>
    </button>
  </div>
<% end %>